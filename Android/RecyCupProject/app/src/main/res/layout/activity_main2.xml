<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marsm_000.recycupproject.MainActivity2"
    android:weightSum="1"
    android:background="@drawable/page_back">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewFlipper2" >

    </ViewFlipper>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="56dp"

        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/RSlideImageButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:minWidth="90dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/slide_btn_left"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:id="@+id/LSlideImageButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:minWidth="90dp"
            android:layout_marginRight="7dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:src="@drawable/slide_btn_right"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
             />

        <ImageView
            android:id="@+id/RefreshButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:minWidth="90dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/re_btn"
            android:layout_alignTop="@+id/RSlideImageButton"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>
